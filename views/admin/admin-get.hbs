<div class='container'>
  <div class='row d-flex justify-content-center align-items-center'>
    <div class='col-10'>
      <h2 id='title-signup'>Acesso à Área de Administrador</h2>
      <form id='form' class="form-header" action="/login" method="POST">
        <div class="form-group pb-3 px-5">
          <div class="input-group input-group-lg">
            <label for="login">Usuário</label><br>
            <input type="text" class="form-control" aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-lg" name="login" placeholder="Insira o seu nome de usuário" />
          </div>
        </div>
        <div class="form-group pb-3 px-5">
          <div class="input-group input-group-lg">
            <label for="login">Senha</label><br>
            <input type="password" class="form-control" aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-lg" name="password" placeholder="*********" />
          </div>
        </div>

        {{#if message}}
        <div class="error-message">{{ message }}</div>
        {{/if}}
        <br><br>

        <div class="d-flex justify-content-center">
          <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#exampleModal">Acessar a
            Conta</button>
        </div>
      </form>
    </div>
  </div>
</div>
